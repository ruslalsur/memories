{
  "name": "memories",
  "version": "1.0.0",
  "description": "project for portfolio",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production PORT=80 node app.js",
    "server:dev": "cross-env NODE_ENV=development PORT=5000 nodemon app.js",
    "client:dev": "npm run start --prefix client",
    "client:build": "npm run build --prefix client",
    "client:install": "npm install --prefix client",
    "full:dev": "cross-env concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "heroku-postbuild": "npm install && npm run client:install && npm run client:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruslalsur/memories.git"
  },
  "keywords": [
    "[memories",
    "remembers, heroku]"
  ],
  "author": "Sukhorukov RG <suhrugen@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ruslalsur/memories/issues"
  },
  "engines": {
    "node": "15.x"
  },
  "homepage": "https://github.com/ruslalsur/memories#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.14"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
